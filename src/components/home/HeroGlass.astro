---
import { Image } from "astro:assets";
import { SITE_CONFIG } from "../../config";
---

<div
    class="md:col-span-2 md:row-span-2 relative group overflow-hidden rounded-3xl bg-gradient-to-br from-white/10 to-white/0 backdrop-blur-2xl border border-white/10 shadow-2xl flex flex-col justify-center items-start p-10 hover:border-white/20 transition-all duration-500 hover:-translate-y-1"
>
    <!-- Dynamic Inner Glow -->
    <div
        class="absolute inset-0 bg-gradient-to-br from-primary/20 via-transparent to-accent/20 opacity-0 group-hover:opacity-100 transition-opacity duration-700"
    >
    </div>

    <!-- Geometric Decorations -->
    <div
        class="absolute top-0 right-0 p-6 opacity-30 group-hover:opacity-60 transition-opacity"
    >
        <div
            class="w-24 h-24 rounded-full border border-white/10 border-dashed animate-[spin_20s_linear_infinite]"
        >
        </div>
    </div>

    <!-- Avatar in Hero (Holographic) -->
    <div class="relative z-10 mb-8 group/avatar">
        <div
            class="relative w-24 h-24 rounded-2xl overflow-hidden border border-white/20 shadow-lg shadow-primary/20 group-hover/avatar:scale-110 transition-transform duration-500"
        >
            <div
                class="absolute inset-0 bg-gradient-to-tr from-primary/40 to-transparent z-10 opacity-0 group-hover/avatar:opacity-100 transition-opacity duration-300"
            >
            </div>
            <Image
                src={SITE_CONFIG.avatar}
                alt={SITE_CONFIG.author}
                class="w-full h-full object-cover"
                width={160}
                height={160}
                loading="eager"
            />
        </div>
        <!-- Floating Status Dot -->
        <div
            class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-500 rounded-full border-2 border-surface-dark z-20 animate-pulse"
        >
        </div>
    </div>

    <div class="relative z-10 space-y-4">
        <h1
            class="text-4xl md:text-6xl font-black font-sans tracking-tight leading-tight text-white/90"
        >
            {SITE_CONFIG.hero.titlePrefix}
            <br />
            {SITE_CONFIG.hero.titleSuffix}
            <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent inline-block cursor-default hover:scale-105 transition-transform origin-left"
                >{SITE_CONFIG.author}</span
            >
        </h1>
        <p
            class="text-lg md:text-xl text-text-secondary max-w-md font-light leading-relaxed whitespace-pre-line"
        >
            {SITE_CONFIG.hero.description}
        </p>
    </div>

    <!-- Interactive CTA -->
    <div class="mt-8 relative z-10">
        <a
            href="/about"
            class="px-6 py-2.5 rounded-full border border-white/10 bg-white/5 hover:bg-white/10 hover:border-accent/40 text-text-secondary hover:text-white transition-all flex items-center gap-2 group/btn"
        >
            <span>了解我
            <svg
                class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg
            >
        </a>
    </div>
</div>
