---
import { Image } from 'astro:assets';
import { SITE_CONFIG } from '../../config';
import IconArrowRight from '../icons/IconArrowRight.astro';
---

<div
    class="group glass-card relative flex flex-col items-start justify-center p-10 transition-all duration-500 hover:-translate-y-1 hover:border-white/20 md:col-span-2 md:row-span-2"
>
    <!-- Dynamic Inner Glow -->
    <div
        class="from-primary/20 to-accent/20 absolute inset-0 bg-gradient-to-br via-transparent opacity-0 transition-opacity duration-700 group-hover:opacity-100"
    >
    </div>

    <!-- Geometric Decorations -->
    <div class="absolute top-0 right-0 p-6 opacity-30 transition-opacity group-hover:opacity-60">
        <div
            class="h-24 w-24 animate-[spin_20s_linear_infinite] rounded-full border border-dashed border-white/10"
        >
        </div>
    </div>

    <!-- Avatar in Hero (Holographic) -->
    <div class="group/avatar relative z-10 mb-8">
        <div
            class="shadow-primary/20 relative h-24 w-24 overflow-hidden rounded-2xl border border-white/20 shadow-lg transition-transform duration-500 group-hover/avatar:scale-110"
        >
            <div
                class="from-primary/40 absolute inset-0 z-10 bg-gradient-to-tr to-transparent opacity-0 transition-opacity duration-300 group-hover/avatar:opacity-100"
            >
            </div>
            <Image
                src={SITE_CONFIG.avatar}
                alt={SITE_CONFIG.author}
                class="h-full w-full object-cover"
                width={160}
                height={160}
                loading="eager"
            />
        </div>
        <!-- Floating Status Dot -->
        <div
            class="border-surface-dark absolute -right-1 -bottom-1 z-20 h-4 w-4 animate-pulse rounded-full border-2 bg-green-500"
        >
        </div>
    </div>

    <div class="relative z-10 space-y-4">
        <h1
            class="font-sans text-4xl leading-tight font-black tracking-tight text-white/90 md:text-6xl"
        >
            {SITE_CONFIG.hero.titlePrefix}
            <br />
            {SITE_CONFIG.hero.titleSuffix}
            <span
                class="from-primary to-accent inline-block origin-left cursor-default bg-gradient-to-r bg-clip-text text-transparent transition-transform hover:scale-105"
                >{SITE_CONFIG.author}</span
            >
        </h1>
        <p
            class="text-text-secondary max-w-md text-lg leading-relaxed font-light whitespace-pre-line md:text-xl"
        >
            {SITE_CONFIG.hero.description}
        </p>
    </div>

    <!-- Interactive CTA -->
    <div class="relative z-10 mt-8">
        <a
            href="/about"
            class="hover:border-accent/40 text-text-secondary group/btn flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-6 py-2.5 transition-all hover:bg-white/10 hover:text-white"
        >
            <span>{SITE_CONFIG.ui.hero.ctaButton}</span>
            <IconArrowRight class="h-4 w-4 transition-transform group-hover/btn:translate-x-1" />
        </a>
    </div>
</div>
