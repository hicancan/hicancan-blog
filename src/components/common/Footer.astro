---
const today = new Date();
import { SITE_CONFIG } from "../../config";
import UptimeTracker from "../interactive/UptimeTracker.astro";
---

<footer class="border-t border-white/5 bg-main/30 mt-20 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div
            class="flex flex-col md:flex-row justify-between items-center gap-6"
        >
            <!-- Brand & Copyright -->
            <div class="text-center md:text-left">
                <p class="text-sm text-text-secondary">
                    &copy; {today.getFullYear()}
                    {SITE_CONFIG.author}. All Rights Reserved.
                </p>
                <p class="text-xs text-text-secondary/60 mt-1">
                    Built with <a
                        href="https://astro.build"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-accent transition-colors">Astro v5</a
                    > & <a
                        href="https://tailwindcss.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-accent transition-colors"
                        >Tailwind CSS v4</a
                    >.
                </p>
                <UptimeTracker
                    startDate={SITE_CONFIG.startDate.toISOString()}
                    class="block text-xs text-text-secondary/40 mt-1 font-mono tabular-nums"
                />
            </div>

            <!-- Social Links -->
            <div class="flex space-x-6">
                <!-- Bilibili -->
                <a
                    href={SITE_CONFIG.social.bilibili}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-text-secondary hover:text-[#fb7299] transition-colors"
                    aria-label="Bilibili"
                >
                    <svg
                        class="h-6 w-6"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M17.813 4.653h.854c1.51.054 2.769.578 3.773 1.574 1.004.995 1.524 2.249 1.56 3.758v8.028c-.036 1.509-.556 2.769-1.56 3.766-1.005.996-2.264 1.524-3.773 1.574H5.333c-1.508-.05-2.766-.578-3.771-1.574-1.004-.997-1.524-2.257-1.56-3.766V9.985c.036-1.509.556-2.763 1.56-3.758 1.005-.996 2.263-1.52 3.771-1.574h.854l-2.3-3.003a.752.752 0 0 1 .184-.963c.273-.21.666-.183.91.062l2.671 3.488c.844-.153 1.708-.23 2.584-.23.824 0 1.637.07 2.435.207l2.695-3.518a.747.747 0 0 1 .929-.071.751.751 0 0 1 .194.966l-2.677 3.493Zm-4.836 11.233c1.786 0 3.238-1.512 3.238-3.377 0-1.865-1.452-3.378-3.238-3.378-1.787 0-3.238 1.513-3.238 3.378 0 1.865 1.451 3.377 3.238 3.377Zm-5.953 0c1.786 0 3.238-1.512 3.238-3.377 0-1.865-1.452-3.378-3.238-3.378-1.787 0-3.238 1.513-3.238 3.378 0 1.865 1.451 3.377 3.238 3.377Z"
                        ></path>
                    </svg>
                </a>

                <!-- GitHub -->
                <a
                    href={SITE_CONFIG.social.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-text-secondary hover:text-white transition-colors"
                    aria-label="GitHub"
                >
                    <span class="sr-only">GitHub</span>
                    <svg
                        class="h-6 w-6"
                        fill="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                    >
                        <path
                            fill-rule="evenodd"
                            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                            clip-rule="evenodd"></path>
                    </svg>
                </a>

                <!-- Email -->
                <a
                    href={`mailto:${SITE_CONFIG.email}`}
                    class="text-text-secondary hover:text-primary transition-colors"
                    aria-label="Email"
                >
                    <svg
                        class="h-6 w-6"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                    >
                        <path
                            d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z"
                        ></path>
                        <path
                            d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z"
                        ></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</footer>
