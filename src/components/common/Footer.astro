---
const today = new Date();
import { SITE_CONFIG } from '../../config';
import UptimeTracker from '../interactive/UptimeTracker.astro';
import IconBilibili from '../icons/IconBilibili.astro';
import IconGithub from '../icons/IconGithub.astro';
import IconEmail from '../icons/IconEmail.astro';
---

<footer class="border-t border-white/5 bg-main/30 mt-20 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-6">
            <!-- Brand & Copyright -->
            <div class="text-center md:text-left">
                <p class="text-sm text-text-secondary">
                    &copy; {today.getFullYear()}
                    {SITE_CONFIG.author}. {SITE_CONFIG.ui.footer.rights}
                </p>
                <p class="text-xs text-text-secondary/60 mt-1">
                    {SITE_CONFIG.ui.footer.builtWith}
                    <a
                        href="https://astro.build"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-accent transition-colors">Astro v5</a
                    > & <a
                        href="https://tailwindcss.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-accent transition-colors">Tailwind CSS v4</a
                    >.
                </p>
                <UptimeTracker
                    startDate={SITE_CONFIG.startDate.toISOString()}
                    class="block text-xs text-text-secondary/40 mt-1 font-mono tabular-nums"
                />
            </div>

            <!-- Social Links -->
            <div class="flex space-x-6">
                <!-- Bilibili -->
                <a
                    href={SITE_CONFIG.social.bilibili}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-text-secondary hover:text-[#fb7299] transition-colors"
                    aria-label="Bilibili"
                >
                    <IconBilibili class="h-6 w-6" />
                </a>

                <!-- GitHub -->
                <a
                    href={SITE_CONFIG.social.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-text-secondary hover:text-white transition-colors"
                    aria-label="GitHub"
                >
                    <span class="sr-only">GitHub</span>
                    <IconGithub class="h-6 w-6" />
                </a>

                <!-- Email -->
                <a
                    href={`mailto:${SITE_CONFIG.email}`}
                    class="text-text-secondary hover:text-primary transition-colors"
                    aria-label="Email"
                >
                    <IconEmail class="h-6 w-6" />
                </a>
            </div>
        </div>
    </div>
</footer>
