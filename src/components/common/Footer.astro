---
const today = new Date();
import { SITE_CONFIG } from '../../config';
import UptimeTracker from '../interactive/UptimeTracker.astro';
import IconBilibili from '../icons/IconBilibili.astro';
import IconGithub from '../icons/IconGithub.astro';
import IconMail from '../icons/IconMail.astro';
---

<footer class="bg-main/30 mt-20 border-t border-white/5 backdrop-blur-sm">
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="flex flex-col items-center justify-between gap-6 md:flex-row">
            <!-- Brand & Copyright -->
            <div class="text-center md:text-left">
                <p class="text-text-secondary text-sm">
                    &copy; {today.getFullYear()}
                    {SITE_CONFIG.author}. {SITE_CONFIG.ui.footer.rights}
                </p>
                <p class="text-text-secondary/60 mt-1 text-xs">
                    {SITE_CONFIG.ui.footer.builtWith}
                    <a
                        href="https://astro.build"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-accent transition-colors">Astro v5</a
                    > & <a
                        href="https://tailwindcss.com"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-accent transition-colors">Tailwind CSS v4</a
                    >.
                </p>
                <UptimeTracker
                    startDate={SITE_CONFIG.startDate.toISOString()}
                    class="text-text-secondary/40 mt-1 block font-mono text-xs tabular-nums"
                />
            </div>

            <!-- Social Links -->
            <div class="flex space-x-6">
                <!-- Bilibili -->
                <a
                    href={SITE_CONFIG.social.bilibili}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-text-secondary hover:text-bilibili transition-colors"
                    aria-label="Bilibili"
                >
                    <IconBilibili class="h-6 w-6" />
                </a>

                <!-- GitHub -->
                <a
                    href={SITE_CONFIG.social.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-text-secondary transition-colors hover:text-white"
                    aria-label="GitHub"
                >
                    <span class="sr-only">GitHub</span>
                    <IconGithub class="h-6 w-6" />
                </a>

                <!-- Email -->
                <a
                    href={`mailto:${SITE_CONFIG.email}`}
                    class="text-text-secondary hover:text-primary transition-colors"
                    aria-label="Email"
                >
                    <IconMail class="h-6 w-6" />
                </a>
            </div>
        </div>
    </div>
</footer>
