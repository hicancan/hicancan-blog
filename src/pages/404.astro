---
import Layout from '../layouts/Layout.astro';
import { SITE_CONFIG } from '../config';
import IconArrowLeft from '../components/icons/IconArrowLeft.astro';
---

<Layout title="404 Not Found" nebulaVariant="none">
    <div class="relative z-10 flex min-h-[70vh] flex-col items-center justify-center text-center">
        <!-- Background Glow -->
        <div
            class="bg-primary/20 pointer-events-none absolute top-1/2 left-1/2 h-96 w-96 -translate-x-1/2 -translate-y-1/2 rounded-full blur-[128px]"
        >
        </div>

        <h1
            class="from-primary/20 to-accent/20 bg-gradient-to-r bg-clip-text text-[12rem] leading-none font-black text-transparent select-none"
        >
            {SITE_CONFIG.ui.notFound.title}
        </h1>

        <div
            class="relative -mt-12 rounded-2xl border border-white/10 bg-white/5 p-8 shadow-2xl backdrop-blur-md"
        >
            <h2 class="mb-2 text-2xl font-bold text-white">
                {SITE_CONFIG.ui.notFound.subtitle}
            </h2>
            <p
                class="text-text-secondary mx-auto mb-8 max-w-sm font-mono text-sm whitespace-pre-line"
            >
                {SITE_CONFIG.ui.notFound.message}
            </p>

            <a
                href="/"
                class="group hover:border-accent/50 inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/10 px-6 py-3 text-white transition-all hover:bg-white/20"
            >
                <span>{SITE_CONFIG.ui.notFound.button}</span>
                <IconArrowLeft class="h-4 w-4 transition-transform group-hover:-translate-x-1" />
            </a>
        </div>
    </div>
</Layout>
