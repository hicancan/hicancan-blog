---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const friends = await getCollection("friends");
---

<Layout title="友链" nebulaVariant="galaxy">
    <div class="max-w-6xl mx-auto px-4 py-20 relative z-10">
        <div class="text-center mb-24">
            <h1
                class="text-5xl md:text-7xl font-black mb-6 text-transparent bg-clip-text bg-gradient-to-r from-accent via-white to-primary animate-gradient bg-300 tracking-tight"
            >
                友链星系
            </h1>
            <p
                class="text-text-secondary max-w-2xl mx-auto text-lg font-mono relative"
            >
                <span class="absolute -left-8 top-1/2 w-6 h-[1px] bg-white/20 hidden md:block"></span>
                // 收到来自 {friends.length} 个相邻星系的信号
                <span class="absolute -right-8 top-1/2 w-6 h-[1px] bg-white/20 hidden md:block"></span>
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-12">
            {
                friends.map((friend, index) => (
                    <a
                        href={friend.data.url}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="group relative h-[400px] perspective-1000"
                        style={{ animationDelay: `${index * 100}ms` }}
                    >
                        <div class="relative h-full w-full transform transition-all duration-700 group-hover:rotate-y-6 group-hover:scale-105 preserve-3d">
                            <!-- Card Body -->
                            <div class="absolute inset-0 bg-gradient-to-b from-white/10 to-white/0 backdrop-blur-xl border border-white/10 rounded-3xl p-8 flex flex-col items-center shadow-xl group-hover:border-accent/40 group-hover:shadow-[0_0_30px_-5px_rgba(var(--color-primary),0.3)] transition-all">
                                
                                <!-- Planet Avatar Container -->
                                <div class="relative w-32 h-32 mb-8 group-hover:scale-110 transition-transform duration-700 ease-out">
                                    <!-- Orbit Ring -->
                                    <div class="absolute inset-0 rounded-full border border-white/10 group-hover:border-accent/30 scale-150 group-hover:rotate-180 transition-all duration-[2s]"></div>
                                    <div class="absolute top-1/2 -right-4 w-2 h-2 bg-accent rounded-full shadow-[0_0_10px_var(--color-accent)] opacity-0 group-hover:opacity-100 transition-opacity delay-100"></div>
                                    
                                    <!-- Atmosphere Glow -->
                                    <div class="absolute inset-0 rounded-full bg-primary/20 blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                                    
                                    <!-- Main Image -->
                                    <div class="relative w-full h-full rounded-full overflow-hidden border-2 border-white/20 group-hover:border-white/50 shadow-2xl bg-black">
                                        <img
                                            src={friend.data.avatar}
                                            alt={friend.data.name}
                                            class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700"
                                        />
                                    </div>
                                </div>

                                <!-- Text Content -->
                                <div class="text-center relative z-10 w-full">
                                    <h3 class="font-bold text-2xl text-white mb-2 group-hover:text-transparent bg-clip-text bg-gradient-to-r group-hover:from-white group-hover:to-accent transition-all">
                                        {friend.data.name}
                                    </h3>
                                    
                                    <div class="flex justify-center mb-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-2 group-hover:translate-y-0">
                                        <span class="text-xs font-mono text-primary bg-primary/10 px-2 py-1 rounded border border-primary/20">
                                            {friend.data.role}
                                        </span>
                                    </div>
                                    
                                    <p class="text-sm text-text-secondary/80 line-clamp-3 leading-relaxed group-hover:text-white/80 transition-colors">
                                        {friend.data.description}
                                    </p>
                                </div>

                                <!-- Connect Button (Appears on Hover) -->
                                <div class="absolute bottom-8 left-0 right-0 flex justify-center opacity-0 group-hover:opacity-100 translate-y-4 group-hover:translate-y-0 transition-all duration-500 delay-100">
                                    <span class="px-6 py-2 rounded-full bg-white/10 border border-white/20 text-white text-sm font-bold flex items-center gap-2 backdrop-blur-md hover:bg-white/20 transition-colors">
                                        Initiate Link
                                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </a>
                ))
            }

            <!-- Add Friend Card (Holographic Portal) -->
            <a
                href="mailto:contact@hicancan.top"
                class="group relative h-[400px] block cursor-pointer"
            >
                <div class="absolute inset-0 bg-white/5 rounded-3xl border border-dashed border-white/20 hover:border-accent/50 hover:bg-accent/5 transition-all duration-300 flex flex-col items-center justify-center gap-6 overflow-hidden">
                    <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-5"></div>
                    
                    <div class="w-20 h-20 rounded-full border border-white/10 flex items-center justify-center group-hover:scale-110 group-hover:border-accent/50 transition-all duration-500">
                        <svg class="w-8 h-8 text-text-secondary group-hover:text-accent transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                        </svg>
                    </div>
                    
                    <div class="text-center">
                        <span class="block text-lg font-bold text-white mb-1">Join the Galaxy</span>
                        <span class="text-sm font-mono text-text-secondary group-hover:text-accent transition-colors">apply_for_link()</span>
                    </div>
                </div>
            </a>
        </div>
    </div>
</Layout>
