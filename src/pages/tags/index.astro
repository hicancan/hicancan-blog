---
import Layout from "../../layouts/Layout.astro";
import { getTagCounts, sortTagsByCount } from "../../lib/content";

const tagCounts = await getTagCounts();
const sortedTags = sortTagsByCount(tagCounts);
---

<Layout title="话题矩阵" nebulaVariant="matrix">

    <div class="max-w-7xl mx-auto px-4 py-20 relative z-10">
        <!-- Header -->
        <div class="mb-24 text-center relative">
            <h1 class="text-6xl md:text-9xl font-black text-transparent bg-clip-text bg-gradient-to-b from-white/10 to-transparent absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 select-none blur-sm pointer-events-none">
                TOPIC MATRIX
            </h1>
            <h2 class="text-4xl md:text-6xl font-bold relative z-10 text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-white/50 filter drop-shadow-[0_0_10px_rgba(255,255,255,0.3)]">
                话题矩阵
            </h2>
            <div class="w-24 h-1 bg-gradient-to-r from-transparent via-primary to-transparent mx-auto mt-8 rounded-full opacity-50"></div>
            <p class="text-text-secondary mt-6 font-mono text-sm relative z-10 tracking-widest uppercase opacity-80">
                // 记录学习轨迹与思考路径
            </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
            {
                sortedTags.map((tag, index) => {
                    const count = tagCounts[tag];
                    
                    return (
                        <a
                            href={`/tags/${encodeURIComponent(tag)}`}
                            class={`group relative block h-48 perspective-1000 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out`}
                            style={{ transitionDelay: `${index * 50}ms` }}
                        >
                            <div class="relative h-full w-full transform transition-all duration-500 group-hover:-translate-y-2 group-hover:scale-[1.02]">
                                <!-- Glass Card -->
                                <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-white/5 to-white/0 backdrop-blur-xl border border-white/10 shadow-[0_8px_32px_0_rgba(0,0,0,0.36)] group-hover:shadow-[0_20px_40px_-10px_rgba(var(--color-primary),0.3)] group-hover:border-white/20 transition-all duration-500">
                                    
                                    <!-- Internal Gradient Glow -->
                                    <div class="absolute inset-0 rounded-3xl bg-gradient-to-br from-primary/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                                    
                                    <!-- Content -->
                                    <div class="absolute inset-0 flex flex-col items-center justify-center p-6 z-10">
                                        <!-- Hexagon Icon Container -->
                                        <div class="relative mb-4 group-hover:scale-110 transition-transform duration-500">
                                            <div class="absolute inset-0 bg-primary/30 blur-xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                                            <div class="w-16 h-16 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center backdrop-blur-md relative z-10 group-hover:border-primary/50 transition-colors duration-300">
                                                <span class="text-3xl font-black text-transparent bg-clip-text bg-gradient-to-br from-white to-white/50 group-hover:to-primary transition-all">#</span>
                                            </div>
                                        </div>

                                        <h3 class="text-2xl font-bold text-white group-hover:text-primary transition-colors duration-300 tracking-tight">
                                            {tag}
                                        </h3>
                                        
                                        <div class="mt-2 flex items-center gap-2">
                                            <span class="px-2 py-0.5 rounded text-[10px] font-mono border border-white/10 bg-black/30 text-text-secondary group-hover:text-white group-hover:border-primary/30 transition-all">
                                                {count} {count > 1 ? "NODES" : "NODE"}
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Corner Tech Accents -->
                                    <div class="absolute top-4 right-4 w-2 h-2 rounded-full bg-white/10 group-hover:bg-primary/80 transition-colors duration-300"></div>
                                    <div class="absolute bottom-4 left-4 w-2 h-2 rounded-full bg-white/10 group-hover:bg-primary/80 transition-colors duration-300 delay-75"></div>
                                </div>
                            </div>
                        </a>
                    );
                })
            }
        </div>
    </div>
</Layout>

<script>
    import { initScrollAnimations } from "../../scripts/animations";
    initScrollAnimations();
    document.addEventListener('astro:page-load', initScrollAnimations);
</script>


