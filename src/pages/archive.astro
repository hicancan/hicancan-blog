---
import Layout from '../layouts/Layout.astro';
import { getSortedPosts } from '../lib/content';
import { formatDateShort } from '../lib/format';

const posts = await getSortedPosts();

const postsByYear = posts.reduce((acc, post) => {
    const year = post.data.pubDate.getFullYear();
    if (!acc[year]) acc[year] = [];
    acc[year].push(post);
    return acc;
}, {} as Record<number, typeof posts>);

const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);
---

<Layout title="归档">

    <div class="max-w-4xl mx-auto py-12 relative z-10">
        <!-- Header -->
        <div class="mb-24 text-center relative">
            <h1 class="text-6xl md:text-9xl font-black text-transparent bg-clip-text bg-gradient-to-b from-white/10 to-transparent absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 select-none blur-sm pointer-events-none">
                TIMELINE
            </h1>
            <h2 class="text-4xl md:text-5xl font-bold relative z-10 text-transparent bg-clip-text bg-gradient-to-r from-white via-white to-white/50 filter drop-shadow-[0_0_10px_rgba(255,255,255,0.3)]">
                时光卷轴
            </h2>
            <div class="w-20 h-1 bg-gradient-to-r from-transparent via-accent to-transparent mx-auto mt-6 rounded-full opacity-50"></div>
            <p class="text-text-secondary mt-6 font-mono text-sm relative z-10 tracking-widest uppercase opacity-80">
                // Recording Moments in the Digital Void
            </p>
        </div>

        <div class="relative space-y-24 px-4">
            <!-- Global Luminous Line -->
            <div class="absolute left-6 md:left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-transparent via-accent/50 to-transparent md:-translate-x-1/2 shadow-[0_0_15px_rgba(var(--color-accent),0.5)]"></div>

            {years.map(year => (
                <div class="relative group/year">
                    <!-- Neon Year Marker -->
                    <div class="flex items-center justify-center mb-16 relative z-10">
                         <span class="px-8 py-2 rounded-full border border-accent/20 bg-black/40 backdrop-blur-md text-2xl font-bold font-mono text-accent shadow-[0_0_20px_-5px_rgba(var(--color-accent),0.3)] group-hover/year:shadow-[0_0_40px_-5px_rgba(var(--color-accent),0.6)] group-hover/year:border-accent/50 transition-all duration-500 cursor-default select-none">
                            {year}
                         </span>
                    </div>
                    
                    <div class="space-y-8">
                        {postsByYear[year].map((post, index) => {
                            return (
                                <div class="relative group perspective-1000 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700 ease-out">
                                    <a href={`/blog/${post.id}/`} class="block">
                                        <div class={`flex flex-col md:flex-row items-center gap-6 md:gap-16 ${index % 2 === 0 ? 'md:flex-row-reverse' : ''}`}>
                                            
                                            <!-- Spacer -->
                                            <div class="hidden md:block w-1/2"></div>
                                            
                                            <!-- Glowing Center Connector -->
                                            <div class="absolute left-6 md:left-1/2 w-4 h-4 -translate-x-1/2 flex items-center justify-center z-10">
                                                <div class={`w-3 h-3 rounded-full transition-all duration-500 bg-main border-2 border-accent group-hover:scale-150 group-hover:border-white group-hover:shadow-[0_0_20px_white]`}></div>
                                            </div>

                                            <!-- Crystal Card -->
                                            <div class="w-full md:w-1/2 pl-12 md:pl-0">
                                                <div class={`
                                                    relative p-6 rounded-2xl 
                                                    bg-gradient-to-br from-white/5 to-white/0
                                                    backdrop-blur-xl border border-white/10
                                                    shadow-[0_8px_32px_0_rgba(0,0,0,0.36)]
                                                    transition-all duration-500
                                                    hover:-translate-y-2 hover:scale-[1.02]
                                                    hover:bg-white/10 hover:border-white/20
                                                    hover:shadow-[0_20px_40px_-10px_rgba(var(--color-primary),0.3)]
                                                    group-hover:after:opacity-100
                                                `}>
                                                    <!-- Internal Glow Effect -->
                                                    <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-accent/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>

                                                    <!-- Decorative Corner -->
                                                    <div class="absolute -right-1 -top-1 w-20 h-20 bg-gradient-to-br from-white/10 to-transparent opacity-20 rounded-tr-2xl pointer-events-none"></div>

                                                    <div class="relative z-10 flex flex-col gap-3">
                                                        <div class="flex items-center justify-between text-xs font-mono tracking-wide">
                                                        <span class="text-text-secondary/70 group-hover:text-white transition-colors">{formatDateShort(post.data.pubDate)}</span>
                                                            <span class="px-2 py-0.5 rounded text-[10px] border border-white/10 bg-black/20 text-accent opacity-50 group-hover:opacity-100 transition-opacity">WRITEUP</span>
                                                        </div>
                                                        
                                                        <h3 class="text-xl font-bold text-white leading-tight group-hover:text-transparent group-hover:bg-clip-text group-hover:bg-gradient-to-r group-hover:from-white group-hover:to-accent transition-all duration-300">
                                                            {post.data.title}
                                                        </h3>
                                                        
                                                        {post.data.description && (
                                                            <p class="text-sm text-text-secondary line-clamp-2 leading-relaxed opacity-80 group-hover:opacity-100 transition-opacity">
                                                                {post.data.description}
                                                            </p>
                                                        )}
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            );
                        })}
                    </div>
                </div>
            ))}
        </div>
    </div>
</Layout>

<script>
    import { initScrollAnimations } from "../scripts/animations";
    initScrollAnimations();
    document.addEventListener('astro:page-load', initScrollAnimations);
</script>
