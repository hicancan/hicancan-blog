---
import BaseHead from '../components/common/BaseHead.astro';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';
import { ClientRouter } from 'astro:transitions';
import NebulaBackground from '../components/common/NebulaBackground.astro';
import { SITE_CONFIG } from '../config';
import type { NebulaVariant } from '../types';

interface Props {
    title?: string;
    description?: string;
    nebulaVariant?: NebulaVariant;
    image?: string;
}

const { title = SITE_CONFIG.title, description, nebulaVariant = 'default', image } = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="scroll-smooth">
    <head>
        <BaseHead title={title} description={description} image={image} />
        <ClientRouter />
    </head>
    <body class="relative flex flex-col">
        <NebulaBackground variant={nebulaVariant} />

        <Header />

        <!-- Main Content -->
        <main class="relative z-10 mx-auto w-full max-w-7xl flex-1 px-4 py-8 sm:px-6 lg:px-8">
            <slot />
        </main>

        <Footer />
    </body>
</html>
